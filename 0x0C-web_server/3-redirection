#!/usr/bin/env bash
# This script configures Nginx and a redirect
sudo apt-get update -y
sudo apt-get install -y nginx
sudo ufw allow 'Nginx HTTP'
sudo chown -R "$USER":"$USER" /var/www/html
sudo echo "Holberton School" > /var/www/html/index.html
to_change = "rewrite /^redirect_me/https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent"
sudo sed -i "/server_name _/a $to_change" /etc/nginx/sites-available/default
sudo service nginx restart
